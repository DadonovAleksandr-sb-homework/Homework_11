<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="ClientsListTemplate">
        <DataTemplate.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="MeasureInstrumentItemTemplate.xaml"/>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </DataTemplate.Resources>
        <Border CornerRadius="10" Margin="2" BorderThickness="2" BorderBrush="#844eff" Background="#353340" >
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="{Binding Path=Title}" 
                           Style="{StaticResource EmptyGoldTextBlockStyle}"
                           Margin="10,0"/>
                <ListBox ItemsSource="{Binding Path=Sensors}" 
                         Style="{StaticResource MeasureInstrumentListStyle}"
                         ItemTemplate="{StaticResource MeasureInstrumentSensorTemplate}"
                >
                    <ListBox.Template>
                        <ControlTemplate>
                            <ItemsPresenter />
                        </ControlTemplate>
                    </ListBox.Template>
                </ListBox>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>